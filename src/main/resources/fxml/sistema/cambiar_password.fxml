<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.CambiarPasswordController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cambiar Contraseña" />
         </children>
      </HBox>

      <!-- Formulario -->
      <VBox spacing="20.0" style="-fx-padding: 30;">
         <children>
            <GridPane hgap="15.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="150.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
               </columnConstraints>
               <children>
                  <Label text="Contraseña actual:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <PasswordField fx:id="txtPasswordActual" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                  <Label text="Nueva contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <PasswordField fx:id="txtNuevaPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="Confirmar contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <PasswordField fx:id="txtConfirmarPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>

            <!-- Indicador de fortaleza de contraseña -->
            <VBox spacing="5.0">
               <children>
                  <Label text="Fortaleza de la contraseña:" />
                  <ProgressBar fx:id="progressFortaleza" prefWidth="200.0" />
                  <Label fx:id="lblFortaleza" style="-fx-text-fill: #6c757d;" text="Ingrese una contraseña" />
               </children>
            </VBox>

            <!-- Requisitos de contraseña -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Requisitos de contraseña:" />
                  <Label fx:id="lblReqLongitud" style="-fx-text-fill: #dc3545;" text="✗ Mínimo 8 caracteres" />
                  <Label fx:id="lblReqMayuscula" style="-fx-text-fill: #dc3545;" text="✗ Al menos una mayúscula" />
                  <Label fx:id="lblReqMinuscula" style="-fx-text-fill: #dc3545;" text="✗ Al menos una minúscula" />
                  <Label fx:id="lblReqNumero" style="-fx-text-fill: #dc3545;" text="✗ Al menos un número" />
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Botones -->
      <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
         <children>
            <Button fx:id="btnCambiar" disable="true" onAction="#cambiarPassword" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Cambiar" />
            <Button fx:id="btnCancelar" onAction="#cancelar" prefWidth="120.0" text="Cancelar" />
         </children>
      </HBox>
   </children>
</VBox>
