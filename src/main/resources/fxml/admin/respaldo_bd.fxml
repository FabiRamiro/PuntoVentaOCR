<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.RespaldoBDController" prefWidth="1000.0" prefHeight="700.0">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;" prefHeight="60.0">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Respaldo y Restauración de Base de Datos" />
         </children>
      </HBox>

      <!-- Contenido principal con pestañas -->
      <TabPane VBox.vgrow="ALWAYS" style="-fx-padding: 15;">
         <tabs>
            <!-- Pestaña de Respaldo -->
            <Tab text="Crear Respaldo" closable="false">
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <!-- Estado actual -->
                        <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                           <children>
                              <Label fx:id="lblEstado" style="-fx-font-weight: bold;" text="Listo para crear respaldo" />
                              <ProgressBar fx:id="progressBar" prefWidth="500.0" visible="false" />
                           </children>
                        </VBox>

                        <!-- Configuración de respaldo -->
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Configuración del Respaldo" />

                                    <VBox spacing="10.0">
                                       <children>
                                          <VBox spacing="5.0">
                                             <children>
                                                <Label text="Ruta de Destino:" />
                                                <HBox spacing="10.0">
                                                   <children>
                                                      <TextField fx:id="txtRutaRespaldo" HBox.hgrow="ALWAYS" editable="false" />
                                                      <Button fx:id="btnSeleccionarRuta" onAction="#seleccionarRutaRespaldo" text="Examinar" style="-fx-background-color: #6c757d; -fx-text-fill: white;" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>

                                          <VBox spacing="8.0">
                                             <children>
                                                <Label text="Opciones:" />
                                                <CheckBox fx:id="chkIncluirDatos" text="Incluir datos de las tablas" selected="true" />
                                                <CheckBox fx:id="chkComprimirRespaldo" text="Comprimir archivo de respaldo" selected="true" />                                             </children>
                                          </VBox>

                                          <Button fx:id="btnCrearRespaldo" onAction="#crearRespaldo" text="Crear Respaldo" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="150.0" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>

                              <!-- Log de actividad -->
                              <VBox spacing="10.0" prefWidth="400.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Log de Actividad" />
                                    <TextArea fx:id="txtLog" VBox.vgrow="ALWAYS" editable="false" wrapText="true" prefHeight="200.0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
