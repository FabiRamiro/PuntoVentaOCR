<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.BitacoraController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Bitácora de Acciones del Sistema" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Desde:" />
            <DatePicker fx:id="dpFechaInicio" />
            <Label text="Hasta:" />
            <DatePicker fx:id="dpFechaFin" />
            <Separator orientation="VERTICAL" />
            <Label text="Usuario:" />
            <TextField fx:id="txtUsuario" prefWidth="120.0" promptText="Nombre usuario" />
            <Label text="Módulo:" />
            <ComboBox fx:id="cmbModulo" prefWidth="120.0" />
            <Label text="Acción:" />
            <ComboBox fx:id="cmbAccion" prefWidth="150.0" />
            <Button fx:id="btnFiltrar" onAction="#filtrarRegistros" text="Filtrar" />
            <Button fx:id="btnLimpiar" onAction="#limpiarFiltros" text="Limpiar" />
            <Button fx:id="btnExportar" onAction="#exportarRegistros" text="Exportar" />
         </items>
      </ToolBar>

      <!-- Contenido principal -->
      <SplitPane dividerPositions="0.7" VBox.vgrow="ALWAYS">
         <items>
            <!-- Tabla de bitácora -->
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                     <children>
                        <Label fx:id="lblTotalRegistros" text="Total registros: 0" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblEstado" text="Listo" />
                     </children>
                  </HBox>

                  <TableView fx:id="tablaBitacora" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha/Hora" />
                        <TableColumn fx:id="colUsuario" prefWidth="120.0" text="Usuario" />
                        <TableColumn fx:id="colAccion" prefWidth="100.0" text="Acción" />
                        <TableColumn fx:id="colModulo" prefWidth="100.0" text="Módulo" />
                        <TableColumn fx:id="colIP" prefWidth="120.0" text="Dirección IP" />
                     </columns>
                  </TableView>
               </children>
            </VBox>

            <!-- Panel de detalles -->
            <VBox spacing="10" style="-fx-padding: 10;">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Detalles del Registro" />
                  <TextArea fx:id="txtDetalles" editable="false" prefRowCount="10" wrapText="true" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
