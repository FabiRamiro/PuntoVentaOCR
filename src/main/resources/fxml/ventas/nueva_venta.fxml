<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.NuevaVentaController">
    <top>
        <!-- Información de la venta -->
        <VBox styleClass="card-header">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label styleClass="label-title" text="Nueva Venta">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER_RIGHT">
                            <children>
                                <Label text="Venta #" />
                                <Label fx:id="lblNumeroVenta" styleClass="label-info" text="V001">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Fecha y Hora:" />
                                <Label fx:id="lblFechaHora" styleClass="label-info" text="01/01/2024 12:00:00" />
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Cajero:" />
                                <Label fx:id="lblUsuario" styleClass="label-info" text="Usuario Actual" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <HBox spacing="10.0">
            <children>
                <!-- Panel izquierdo - Búsqueda y productos -->
                <VBox prefWidth="400.0" spacing="10.0" styleClass="content-pane">
                    <children>
                        <Label styleClass="label-section" text="Búsqueda de Productos" />

                        <!-- Campo de búsqueda -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Buscar por código o nombre:" />
                                <TextField fx:id="txtBuscarProducto" onKeyPressed="#handleBuscarProducto" promptText="Escanee código de barras o escriba nombre..." />
                            </children>
                        </VBox>

                        <!-- Lista de productos -->
                        <TableView fx:id="tableProductos" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNombreProducto" prefWidth="180.0" text="Producto" />
                                <TableColumn fx:id="colCodigoProducto" prefWidth="100.0" text="Código" />
                                <TableColumn fx:id="colPrecioProducto" prefWidth="80.0" text="Precio" />
                                <TableColumn fx:id="colStockProducto" prefWidth="60.0" text="Stock" />
                            </columns>
                        </TableView>

                        <Button fx:id="btnAgregarProducto" maxWidth="1.7976931348623157E308" onAction="#handleAgregarProducto" styleClass="btn-primary" text="Agregar al Carrito" />
                    </children>
                </VBox>

                <!-- Panel derecho - Carrito y pago -->
                <VBox prefWidth="500.0" spacing="10.0" styleClass="content-pane">
                    <children>
                        <Label styleClass="label-section" text="Carrito de Compras" />

                        <!-- Carrito de compras -->
                        <TableView fx:id="tableCarrito" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="colProductoCarrito" prefWidth="200.0" text="Producto" />
                                <TableColumn fx:id="colCantidadCarrito" prefWidth="80.0" text="Cantidad" />
                                <TableColumn fx:id="colPrecioCarrito" prefWidth="80.0" text="Precio" />
                                <TableColumn fx:id="colSubtotalCarrito" prefWidth="100.0" text="Subtotal" />
                            </columns>
                        </TableView>

                        <!-- Botones de carrito -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="btnModificarCantidad" onAction="#handleModificarCantidad" styleClass="btn-warning" text="Modificar Cantidad" />
                                <Button fx:id="btnEliminarItem" onAction="#handleEliminarItem" styleClass="btn-danger" text="Eliminar Item" />
                            </children>
                        </HBox>

                        <!-- Totales -->
                        <VBox spacing="10.0" styleClass="card">
                            <children>
                                <Label styleClass="label-subtitle" text="Resumen de Venta" />

                                <HBox>
                                    <children>
                                        <Label text="Cantidad de artículos:" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="lblCantidadArticulos" styleClass="label-info" text="0" />
                                    </children>
                                </HBox>

                                <HBox>
                                    <children>
                                        <Label text="Subtotal:" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="lblSubtotal" styleClass="label-info" text="$0.00">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <HBox>
                                    <children>
                                        <Label text="IVA (16%):" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="lblImpuestos" styleClass="label-info" text="$0.00">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <Separator />

                                <HBox>
                                    <children>
                                        <Label styleClass="label-title" text="TOTAL:">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="lblTotal" styleClass="label-success" text="$0.00">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>

                        <!-- Método de pago -->
                        <VBox spacing="10.0" styleClass="card">
                            <children>
                                <Label styleClass="label-subtitle" text="Método de Pago" />

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Seleccionar método:" />
                                        <ComboBox fx:id="cmbMetodoPago" maxWidth="1.7976931348623157E308" onAction="#handleCambioMetodoPago" />
                                    </children>
                                </VBox>

                                <!-- Campo para efectivo -->
                                <VBox fx:id="vboxEfectivo" spacing="5.0">
                                    <children>
                                        <Label text="Efectivo recibido:" />
                                        <TextField fx:id="txtEfectivoRecibido" promptText="0.00" />
                                        <Label fx:id="lblCambio" styleClass="label-success" text="Cambio: $0.00">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Campo para transferencia -->
                                <VBox fx:id="vboxTransferencia" spacing="5.0" visible="false">
                                    <children>
                                        <Label text="Referencia de transferencia:" />
                                        <TextField fx:id="txtReferenciaTransferencia" promptText="Ingrese la referencia..." />
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>

                        <!-- Botones de acción -->
                        <VBox spacing="10.0">
                            <children>
                                <Button fx:id="btnProcesarVenta" maxWidth="1.7976931348623157E308" onAction="#handleProcesarVenta" styleClass="btn-success" text="PROCESAR VENTA">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Button>

                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnImprimirTicket" onAction="#handleImprimirTicket" styleClass="btn-primary" text="Imprimir Ticket" />
                                        <Button fx:id="btnCancelarVenta" onAction="#handleCancelarVenta" styleClass="btn-danger" text="Cancelar Venta" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </center>
</BorderPane>