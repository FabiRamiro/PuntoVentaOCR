<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.GestionarDevolucionesController" prefWidth="1200.0" prefHeight="800.0">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;" prefHeight="60.0">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestionar Devoluciones" />
         </children>
      </HBox>

      <!-- Panel de nueva devolución -->
      <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #ffffff;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Crear Nueva Devolución" />
            <HBox spacing="15.0" alignment="CENTER_LEFT">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Número de Venta:" />
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="txtBuscarVenta" prefWidth="150.0" promptText="Ej: V-001" />
                              <Button fx:id="btnBuscarVenta" onAction="#buscarVenta" text="Buscar" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
                           </children>
                        </HBox>
                        <Label fx:id="lblVentaInfo" wrapText="true" prefWidth="300.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Motivo de Devolución:" />
                        <TextArea fx:id="txtMotivo" prefWidth="300.0" prefHeight="60.0" promptText="Describa el motivo de la devolución..." />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Monto a Devolver:" />
                        <TextField fx:id="txtMontoDevolucion" prefWidth="120.0" promptText="0.00" />
                        <Button fx:id="btnCrearDevolucion" onAction="#crearDevolucion" text="Crear Devolución" style="-fx-background-color: #28a745; -fx-text-fill: white;" disable="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <Separator />

      <!-- Filtros -->
      <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #f8f9fa;">
         <children>
            <Label style="-fx-font-weight: bold;" text="Filtros de Búsqueda" />
            <HBox spacing="15.0" alignment="CENTER_LEFT">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Fecha Desde:" />
                        <DatePicker fx:id="dpFechaDesde" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Fecha Hasta:" />
                        <DatePicker fx:id="dpFechaHasta" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Estado:" />
                        <ComboBox fx:id="cmbEstado" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text=" " />
                        <Button fx:id="btnFiltrar" onAction="#filtrarDevoluciones" text="Filtrar" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <Separator />

      <!-- Contenido principal con tabla y detalles -->
      <HBox VBox.vgrow="ALWAYS" spacing="10.0" style="-fx-padding: 15;">
         <children>
            <!-- Tabla de devoluciones -->
            <VBox HBox.hgrow="ALWAYS" spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Lista de Devoluciones" />
                  <TableView fx:id="tablaDevoluciones" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNumero" prefWidth="120.0" text="Número" />
                        <TableColumn fx:id="colVenta" prefWidth="100.0" text="Venta" />
                        <TableColumn fx:id="colFecha" prefWidth="130.0" text="Fecha" />
                        <TableColumn fx:id="colMotivo" prefWidth="150.0" text="Motivo" />
                        <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
                        <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="colProcesadoPor" prefWidth="120.0" text="Procesado Por" />
                        <TableColumn fx:id="colAcciones" prefWidth="80.0" text="Acciones" />
                     </columns>
                  </TableView>
               </children>
            </VBox>

            <!-- Panel de detalles -->
            <VBox prefWidth="350.0" spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Detalles de la Devolución" />
                  <TextArea fx:id="txtDetalleDevolucion" VBox.vgrow="ALWAYS" editable="false" wrapText="true" />

                  <!-- Botones de autorización -->
                  <VBox spacing="10.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Autorización:" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnAprobar" onAction="#aprobarDevolucion" text="Aprobar" style="-fx-background-color: #28a745; -fx-text-fill: white;" disable="true" />
                              <Button fx:id="btnRechazar" onAction="#rechazarDevolucion" text="Rechazar" style="-fx-background-color: #dc3545; -fx-text-fill: white;" disable="true" />
                           </children>
                        </HBox>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: gray;" text="* Solo gerentes y administradores pueden autorizar devoluciones" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
