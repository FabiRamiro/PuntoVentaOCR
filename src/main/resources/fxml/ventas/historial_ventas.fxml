<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.HistorialVentasController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Historial de Ventas" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Desde:" />
            <DatePicker fx:id="dpFechaDesde" />
            <Label text="Hasta:" />
            <DatePicker fx:id="dpFechaHasta" />
            <Separator orientation="VERTICAL" />
            <Label text="Usuario:" />
            <ComboBox fx:id="cmbUsuario" prefWidth="150.0" />
            <Label text="Estado:" />
            <ComboBox fx:id="cmbEstado" prefWidth="120.0" />
            <Button fx:id="btnFiltrar" onAction="#aplicarFiltros" text="Filtrar" />
            <Button fx:id="btnLimpiarFiltros" onAction="#limpiarFiltros" text="Limpiar" />
         </items>
      </ToolBar>

      <!-- Tabla de ventas -->
      <TableView fx:id="tablaVentas" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colNumero" prefWidth="80.0" text="Número" />
            <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
            <TableColumn fx:id="colCliente" prefWidth="200.0" text="Cliente" />
            <TableColumn fx:id="colUsuario" prefWidth="120.0" text="Usuario" />
            <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colAcciones" prefWidth="150.0" text="Acciones" />
         </columns>
      </TableView>

      <!-- Barra de estado -->
      <ToolBar style="-fx-background-color: #e9ecef;">
         <items>
            <Label fx:id="lblTotalVentas" text="Total ventas: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblMontoTotal" text="Monto total: 0.00" />
         </items>
      </ToolBar>
   </children>
</VBox>
