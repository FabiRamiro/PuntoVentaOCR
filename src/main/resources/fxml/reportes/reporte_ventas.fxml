<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ReporteVentasController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reporte de Ventas" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Desde:" />
            <DatePicker fx:id="dpFechaDesde" />
            <Label text="Hasta:" />
            <DatePicker fx:id="dpFechaHasta" />
            <Separator orientation="VERTICAL" />
            <Label text="Usuario:" />
            <ComboBox fx:id="cmbUsuario" prefWidth="150.0" />
            <Button fx:id="btnGenerar" onAction="#generarReporte" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Generar Reporte" />
            <Button fx:id="btnExportar" onAction="#exportarReporte" text="Exportar PDF" />
         </items>
      </ToolBar>

      <!-- Resumen -->
      <GridPane hgap="20.0" style="-fx-padding: 15; -fx-background-color: #e7f3ff;">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <children>
            <VBox alignment="CENTER" GridPane.columnIndex="0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Total Ventas" />
                  <Label fx:id="lblTotalVentas" style="-fx-font-size: 18px; -fx-text-fill: #007bff;" text="0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Monto Total" />
                  <Label fx:id="lblMontoTotal" style="-fx-font-size: 18px; -fx-text-fill: #28a745;" text="0.00" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="2">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Promedio Diario" />
                  <Label fx:id="lblPromedioDiario" style="-fx-font-size: 18px; -fx-text-fill: #ffc107;" text="0.00" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="3">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Ticket Promedio" />
                  <Label fx:id="lblTicketPromedio" style="-fx-font-size: 18px; -fx-text-fill: #6c757d;" text="0.00" />
               </children>
            </VBox>
         </children>
      </GridPane>

      <!-- Tabla de ventas -->
      <TableView fx:id="tablaReporte" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
            <TableColumn fx:id="colNumero" prefWidth="100.0" text="Número" />
            <TableColumn fx:id="colCliente" prefWidth="200.0" text="Cliente" />
            <TableColumn fx:id="colUsuario" prefWidth="120.0" text="Usuario" />
            <TableColumn fx:id="colSubtotal" prefWidth="100.0" text="Subtotal" />
            <TableColumn fx:id="colIva" prefWidth="100.0" text="IVA" />
            <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
         </columns>
      </TableView>
   </children>
</VBox>
