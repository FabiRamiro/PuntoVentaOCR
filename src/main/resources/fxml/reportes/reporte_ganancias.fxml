<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ReporteGananciasController" prefWidth="1000.0" prefHeight="700.0">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;" prefHeight="60.0">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reporte de Ganancias" />
         </children>
      </HBox>

      <!-- Filtros -->
      <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #ffffff;">
         <children>
            <Label style="-fx-font-weight: bold;" text="Filtros de Búsqueda" />
            <HBox spacing="15.0" alignment="CENTER_LEFT">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Fecha Desde:" />
                        <DatePicker fx:id="dpFechaDesde" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Fecha Hasta:" />
                        <DatePicker fx:id="dpFechaHasta" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Método de Pago:" />
                        <ComboBox fx:id="cmbMetodoPago" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text=" " />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="btnGenerar" onAction="#generarReporte" text="Generar Reporte" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
                              <Button fx:id="btnExportar" onAction="#exportarReporte" text="Exportar PDF" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <Separator />

      <!-- Resumen de Ganancias -->
      <VBox spacing="10.0" style="-fx-padding: 15; -fx-background-color: #f8f9fa;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Resumen de Ganancias" />
            <GridPane hgap="30.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <!-- Primera fila -->
                  <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Total de Ventas" />
                        <Label fx:id="lblTotalVentas" style="-fx-font-size: 18px; -fx-text-fill: #007bff;" text="0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Ingresos Brutos" />
                        <Label fx:id="lblIngresosBrutos" style="-fx-font-size: 18px; -fx-text-fill: #007bff;" text="0.00" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Costo de Mercancía" />
                        <Label fx:id="lblCostoMercancia" style="-fx-font-size: 18px; -fx-text-fill: #dc3545;" text="0.00" />
                     </children>
                  </VBox>

                  <!-- Segunda fila -->
                  <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Ganancia Neta" />
                        <Label fx:id="lblGananciaNeta" style="-fx-font-size: 18px; -fx-text-fill: #28a745;" text="0.00" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Margen de Ganancia" />
                        <Label fx:id="lblMargenGanancia" style="-fx-font-size: 18px; -fx-text-fill: #ffc107;" text="0.0%" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Ganancia Diaria Promedio" />
                        <Label fx:id="lblGananciaDiaria" style="-fx-font-size: 18px; -fx-text-fill: #17a2b8;" text="0.00" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </VBox>

      <Separator />

      <!-- Tabla de Detalle Diario -->
      <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 15;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Detalle Diario de Ganancias" />
            <TableView fx:id="tablaGanancias" VBox.vgrow="ALWAYS" style="-fx-padding: 10 0 0 0;">
               <columns>
                  <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                  <TableColumn fx:id="colVentas" prefWidth="80.0" text="Ventas" />
                  <TableColumn fx:id="colIngresos" prefWidth="120.0" text="Ingresos Brutos" />
                  <TableColumn fx:id="colCostos" prefWidth="120.0" text="Costo Mercancía" />
                  <TableColumn fx:id="colGanancias" prefWidth="120.0" text="Ganancia Neta" />
                  <TableColumn fx:id="colMargen" prefWidth="100.0" text="Margen %" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
