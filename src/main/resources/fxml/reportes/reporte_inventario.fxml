<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ReporteInventarioController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reporte de Inventario" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Categoría:" />
            <ComboBox fx:id="cmbCategoria" prefWidth="150.0" />
            <Label text="Estado Stock:" />
            <ComboBox fx:id="cmbEstadoStock" prefWidth="120.0" />
            <Button fx:id="btnGenerar" onAction="#generarReporte" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Generar" />
            <Button fx:id="btnExportar" onAction="#exportarReporte" text="Exportar PDF" />
         </items>
      </ToolBar>

      <!-- Resumen de inventario -->
      <GridPane hgap="20.0" style="-fx-padding: 15; -fx-background-color: #e7f3ff;">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <children>
            <VBox alignment="CENTER" GridPane.columnIndex="0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Total Productos" />
                  <Label fx:id="lblTotalProductos" style="-fx-font-size: 18px; -fx-text-fill: #007bff;" text="0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Valor Total" />
                  <Label fx:id="lblValorTotal" style="-fx-font-size: 18px; -fx-text-fill: #28a745;" text="0.00" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="2">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Bajo Stock" />
                  <Label fx:id="lblBajoStock" style="-fx-font-size: 18px; -fx-text-fill: #dc3545;" text="0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="3">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Sin Stock" />
                  <Label fx:id="lblSinStock" style="-fx-font-size: 18px; -fx-text-fill: #6c757d;" text="0" />
               </children>
            </VBox>
         </children>
      </GridPane>

      <!-- Tabla de inventario -->
      <TableView fx:id="tablaInventario" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Producto" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
            <TableColumn fx:id="colStockMinimo" prefWidth="100.0" text="Stock Mín." />
            <TableColumn fx:id="colPrecioCompra" prefWidth="100.0" text="P. Compra" />
            <TableColumn fx:id="colPrecioVenta" prefWidth="100.0" text="P. Venta" />
            <TableColumn fx:id="colValorInventario" prefWidth="120.0" text="Valor Total" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
         </columns>
      </TableView>
   </children>
</VBox>
