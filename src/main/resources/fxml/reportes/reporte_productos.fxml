<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ReporteProductosController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Reporte de Productos Más Vendidos" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Desde:" />
            <DatePicker fx:id="dpFechaDesde" />
            <Label text="Hasta:" />
            <DatePicker fx:id="dpFechaHasta" />
            <Separator orientation="VERTICAL" />
            <Label text="Categoría:" />
            <ComboBox fx:id="cmbCategoria" prefWidth="150.0" />
            <Label text="Top:" />
            <ComboBox fx:id="cmbTop" prefWidth="80.0" />
            <Button fx:id="btnGenerar" onAction="#generarReporte" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Generar" />
            <Button fx:id="btnExportar" onAction="#exportarReporte" text="Exportar PDF" />
         </items>
      </ToolBar>

      <!-- Tabla de productos más vendidos -->
      <TableView fx:id="tablaProductosMasVendidos" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colPosicion" prefWidth="80.0" text="Posición" />
            <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Producto" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colCantidadVendida" prefWidth="120.0" text="Cantidad Vendida" />
            <TableColumn fx:id="colMontoTotal" prefWidth="120.0" text="Monto Total" />
            <TableColumn fx:id="colPorcentaje" prefWidth="100.0" text="Porcentaje Ventas" />
         </columns>
      </TableView>

      <!-- Resumen -->
      <GridPane hgap="20.0" style="-fx-padding: 15; -fx-background-color: #e7f3ff;">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <children>
            <VBox alignment="CENTER" GridPane.columnIndex="0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Productos Vendidos" />
                  <Label fx:id="lblTotalProductos" style="-fx-font-size: 18px; -fx-text-fill: #007bff;" text="0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Unidades Totales" />
                  <Label fx:id="lblUnidadesTotales" style="-fx-font-size: 18px; -fx-text-fill: #28a745;" text="0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="2">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Monto Total" />
                  <Label fx:id="lblMontoTotal" style="-fx-font-size: 18px; -fx-text-fill: #ffc107;" text="0.00" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</VBox>
