<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="20.0" style="-fx-background-color: #f8f9fa;">
         <children>
            <!-- Título -->
            <Label text="Sistema de Punto de Venta" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="con OCR" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>

            <!-- Separador -->
            <Separator prefWidth="200.0" />

            <!-- Formulario de login -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Iniciar Sesión">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>

                  <!-- Campo Usuario -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Usuario:" />
                        <TextField fx:id="txtUsuario" prefWidth="280.0" prefHeight="35.0" promptText="Ingrese su usuario" style="-fx-padding: 8; -fx-font-size: 14px;" />
                     </children>
                  </VBox>

                  <!-- Campo Contraseña -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Contraseña:" />
                        <PasswordField fx:id="txtPassword" prefWidth="280.0" prefHeight="35.0" promptText="Ingrese su contraseña" style="-fx-padding: 8; -fx-font-size: 14px;" />
                     </children>
                  </VBox>

                  <!-- Mensaje de estado -->
                  <Label fx:id="lblMensaje" text="" textFill="RED" wrapText="true" />

                  <!-- Indicador de progreso -->
                  <ProgressIndicator fx:id="progressIndicator" prefHeight="30.0" prefWidth="30.0" visible="false" />

                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="btnLogin" defaultButton="true" onAction="#iniciarSesion" prefWidth="120.0" prefHeight="40.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Ingresar" />
                        <Button onAction="#salir" prefWidth="120.0" prefHeight="40.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px;" text="Salir" />
                     </children>
                  </HBox>

                  <!-- Enlace de ayuda -->
                  <Hyperlink onAction="#mostrarAyuda" text="¿Necesita ayuda?" />
               </children>
            </VBox>

            <!-- Footer -->
            <Label text="© 2024 Sistema POS con OCR" textFill="#6c757d">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</VBox>
