<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" styleClass="login-container">
            <children>
                <VBox alignment="CENTER" maxWidth="400.0" styleClass="login-card">
                    <children>
                        <!-- Logo y título -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label styleClass="label-title" text="Sistema POS con OCR">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label styleClass="label-subtitle" text="Inicie sesión para continuar">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- Formulario de login -->
                        <VBox spacing="15.0">
                            <children>
                                <!-- Campo usuario -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Usuario:" />
                                        <TextField fx:id="txtUsuario" promptText="Ingrese su nombre de usuario" />
                                    </children>
                                </VBox>

                                <!-- Campo contraseña -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Contraseña:" />
                                        <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" />
                                    </children>
                                </VBox>

                                <!-- Checkbox recordar -->
                                <CheckBox fx:id="chkRecordarUsuario" mnemonicParsing="false" text="Recordar usuario" />

                                <!-- Botones -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Button fx:id="btnLogin" maxWidth="1.7976931348623157E308" onAction="#handleLogin" styleClass="btn-primary" text="Iniciar Sesión">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Button>

                                        <HBox alignment="CENTER" spacing="10.0">
                                            <children>
                                                <Button fx:id="btnRecuperarPassword" onAction="#handleRecuperarPassword" styleClass="btn-secondary" text="Recuperar Contraseña" />
                                                <Button fx:id="btnSalir" onAction="#handleSalir" styleClass="btn-danger" text="Salir" />
                                            </children>
                                        </HBox>
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Indicador de progreso -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ProgressIndicator fx:id="progressLogin" visible="false" />
                                <Label fx:id="lblStatus" text="" />
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </center>

    <!-- Footer con versión -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <children>
                <Label fx:id="lblVersion" styleClass="label-info" text="v1.0.0" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>