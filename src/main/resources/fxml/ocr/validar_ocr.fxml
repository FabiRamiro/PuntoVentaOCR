<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ValidarOCRController">
    <top>
        <!-- Título y filtros -->
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" styleClass="card-header">
                    <children>
                        <Label styleClass="label-title" text="Validación de Comprobantes OCR">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Filtros -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="toolbar-pane">
                    <children>
                        <Label text="Estado:" />
                        <ComboBox fx:id="cmbFiltroEstado" prefWidth="120.0" />

                        <Label text="Referencia:" />
                        <TextField fx:id="txtFiltroReferencia" prefWidth="150.0" promptText="Buscar por referencia..." />

                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnNuevoComprobante" onAction="#handleNuevoComprobante" styleClass="btn-primary" text="Nuevo Comprobante" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
            <items>
                <!-- Panel izquierdo - Lista de comprobantes -->
                <VBox styleClass="content-pane">
                    <children>
                        <Label styleClass="label-section" text="Comprobantes Pendientes" />

                        <TableView fx:id="tableComprobantes" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNumeroVenta" prefWidth="100.0" text="# Venta" />
                                <TableColumn fx:id="colReferencia" prefWidth="120.0" text="Referencia" />
                                <TableColumn fx:id="colMonto" prefWidth="80.0" text="Monto" />
                                <TableColumn fx:id="colBanco" prefWidth="100.0" text="Banco" />
                                <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
                                <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- Panel derecho - Validación OCR -->
                <VBox styleClass="form-pane">
                    <children>
                        <Label styleClass="label-section" text="Validación de Comprobante" />

                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox spacing="15.0">
                                    <children>
                                        <!-- Imagen del comprobante -->
                                        <VBox alignment="CENTER" spacing="10.0" styleClass="card">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Comprobante" />
                                                <ImageView fx:id="imgComprobante" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/comprobante_default.png" />
                                                    </image>
                                                </ImageView>
                                                <HBox alignment="CENTER" spacing="10.0">
                                                    <children>
                                                        <Button fx:id="btnCargarImagen" onAction="#handleCargarImagen" styleClass="btn-secondary" text="Cargar Imagen" />
                                                        <Button fx:id="btnProcesarOCR" onAction="#handleProcesarOCR" styleClass="btn-primary" text="Procesar OCR" />
                                                    </children>
                                                </HBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                        </VBox>

                                        <!-- Información de la venta -->
                                        <VBox spacing="10.0" styleClass="card">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Información de la Venta" />

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Número de Venta:" />
                                                        <TextField fx:id="txtNumeroVenta" editable="false" />
                                                    </children>
                                                </VBox>

                                                <HBox spacing="10.0">
                                                    <children>
                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Total de Venta:" />
                                                                <Label fx:id="lblTotalVenta" styleClass="label-success" text="$0.00">
                                                                    <font>
                                                                        <Font name="System Bold" size="14.0" />
                                                                    </font>
                                                                </Label>
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Fecha de Venta:" />
                                                                <Label fx:id="lblFechaVenta" styleClass="label-info" text="-" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Usuario que realizó la venta:" />
                                                        <Label fx:id="lblUsuarioVenta" styleClass="label-info" text="-" />
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                        </VBox>

                                        <!-- Datos extraídos por OCR -->
                                        <VBox spacing="10.0" styleClass="card">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Datos del Comprobante (OCR)" />

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Banco Emisor:" />
                                                        <TextField fx:id="txtBancoEmisor" promptText="Nombre del banco" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Cuenta Remitente:" />
                                                        <TextField fx:id="txtCuentaRemitente" promptText="****1234" />
                                                    </children>
                                                </VBox>

                                                <HBox spacing="10.0">
                                                    <children>
                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Monto Detectado:" />
                                                                <TextField fx:id="txtMonto" promptText="0.00" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Fecha de Transferencia:" />
                                                                <DatePicker fx:id="dpFechaTransferencia" maxWidth="1.7976931348623157E308" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Referencia de Operación:" />
                                                        <TextField fx:id="txtReferencia" promptText="ABC123DEF456" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Nombre del Beneficiario:" />
                                                        <TextField fx:id="txtBeneficiario" promptText="Nombre del beneficiario" />
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                        </VBox>

                                        <!-- Estado de validación -->
                                        <VBox spacing="10.0" styleClass="card">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Estado de Validación" />

                                                <HBox>
                                                    <children>
                                                        <Label text="Estado actual:" />
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <Label fx:id="lblEstadoValidacion" styleClass="estado-pendiente" text="PENDIENTE" />
                                                    </children>
                                                </HBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Observaciones:" />
                                                        <TextArea fx:id="txtObservaciones" maxHeight="80.0" promptText="Observaciones sobre la validación..." />
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                        </VBox>

                                        <!-- Botones de acción -->
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER" spacing="10.0">
                                                    <children>
                                                        <Button fx:id="btnValidar" onAction="#handleValidar" styleClass="btn-success" text="✓ VALIDAR">
                                                            <font>
                                                                <Font name="System Bold" size="14.0" />
                                                            </font>
                                                        </Button>
                                                        <Button fx:id="btnRechazar" onAction="#handleRechazar" styleClass="btn-danger" text="✗ RECHAZAR">
                                                            <font>
                                                                <Font name="System Bold" size="14.0" />
                                                            </font>
                                                        </Button>
                                                    </children>
                                                </HBox>

                                                <Button fx:id="btnGuardarCambios" maxWidth="1.7976931348623157E308" onAction="#handleGuardarCambios" styleClass="btn-primary" text="Guardar Cambios" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="10.0" />
                                            </VBox.margin>
                                        </VBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>