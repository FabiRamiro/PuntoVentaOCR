<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.HistorialOCRController">
   <children>
      <!-- TÃ­tulo -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Historial de Validaciones OCR" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Desde:" />
            <DatePicker fx:id="dpFechaDesde" />
            <Label text="Hasta:" />
            <DatePicker fx:id="dpFechaHasta" />
            <Separator orientation="VERTICAL" />
            <Label text="Estado:" />
            <ComboBox fx:id="cmbEstado" prefWidth="120.0" />
            <Label text="Usuario:" />
            <ComboBox fx:id="cmbUsuario" prefWidth="150.0" />
            <Button fx:id="btnFiltrar" onAction="#aplicarFiltros" text="Filtrar" />
            <Button fx:id="btnLimpiarFiltros" onAction="#limpiarFiltros" text="Limpiar" />
         </items>
      </ToolBar>

      <!-- Tabla de validaciones OCR -->
      <TableView fx:id="tablaHistorialOCR" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
            <TableColumn fx:id="colVenta" prefWidth="100.0" text="Venta" />
            <TableColumn fx:id="colBanco" prefWidth="120.0" text="Banco" />
            <TableColumn fx:id="colReferencia" prefWidth="150.0" text="Referencia" />
            <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colUsuario" prefWidth="120.0" text="Usuario" />
            <TableColumn fx:id="colAcciones" prefWidth="120.0" text="Acciones" />
         </columns>
      </TableView>

      <!-- Barra de estado -->
      <ToolBar style="-fx-background-color: #e9ecef;">
         <items>
            <Label fx:id="lblTotalValidaciones" text="Total validaciones: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblValidadas" text="Validadas: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblRechazadas" text="Rechazadas: 0" />
         </items>
      </ToolBar>
   </children>
</VBox>
