<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.BienvenidaController">
   <children>
      <!-- Logo/Icono principal -->
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label style="-fx-font-size: 48px; -fx-text-fill: #007bff;" text="🏪" />
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" text="Sistema POS OCR" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" text="Punto de Venta con Validación OCR" />
         </children>
      </VBox>

      <!-- Información del usuario -->
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #28a745;" text="¡Bienvenido al Sistema!" />
            <Label fx:id="lblBienvenidaUsuario" style="-fx-font-size: 16px; -fx-text-fill: #495057;" text="Usuario: [Nombre]" />
            <Label fx:id="lblBienvenidaRol" style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" text="Rol: [Rol]" />
            <Label fx:id="lblBienvenidaFecha" style="-fx-font-size: 12px; -fx-text-fill: #868e96;" text="Sesión iniciada: [Fecha]" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>

      <!-- Información del sistema -->
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Separator prefWidth="200.0" />
            <Label style="-fx-font-size: 12px; -fx-text-fill: #868e96;" text="Para comenzar, seleccione una opción del menú superior" />
            <Label style="-fx-font-size: 10px; -fx-text-fill: #adb5bd;" text="Sistema POS OCR v1.0 - © 2025" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
