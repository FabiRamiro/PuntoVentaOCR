<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.GestionarProductosController">
    <top>
        <!-- Título y barra de herramientas -->
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" styleClass="card-header">
                    <children>
                        <Label styleClass="label-title" text="Gestión de Productos">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Barra de filtros y búsqueda -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="toolbar-pane">
                    <children>
                        <Label text="Buscar:" />
                        <TextField fx:id="txtBuscar" prefWidth="200.0" promptText="Nombre o código de barras..." />

                        <Separator orientation="VERTICAL" />

                        <Label text="Categoría:" />
                        <ComboBox fx:id="cmbFiltroCategoria" prefWidth="150.0" promptText="Todas las categorías" />

                        <Label text="Estado:" />
                        <ComboBox fx:id="cmbFiltroEstado" prefWidth="100.0" />

                        <Region HBox.hgrow="ALWAYS" />

                        <!-- Botones de acción -->
                        <Button fx:id="btnNuevo" onAction="#handleNuevo" styleClass="btn-primary" text="Nuevo Producto" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.6" orientation="HORIZONTAL">
            <items>
                <!-- Lista de productos -->
                <VBox styleClass="content-pane">
                    <children>
                        <Label styleClass="label-section" text="Lista de Productos" />

                        <TableView fx:id="tableProductos" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre" />
                                <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
                                <TableColumn fx:id="colPrecio" prefWidth="80.0" text="Precio" />
                                <TableColumn fx:id="colStock" prefWidth="60.0" text="Stock" />
                                <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
                                <TableColumn fx:id="colCodigo" prefWidth="120.0" text="Código" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- Formulario de producto -->
                <VBox styleClass="form-pane">
                    <children>
                        <Label styleClass="label-section" text="Detalles del Producto" />

                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox spacing="15.0">
                                    <children>
                                        <!-- Imagen del producto -->
                                        <VBox alignment="CENTER" spacing="10.0">
                                            <children>
                                                <ImageView fx:id="imgProducto" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/producto_default.png" />
                                                    </image>
                                                </ImageView>
                                                <Button fx:id="btnSeleccionarImagen" onAction="#handleSeleccionarImagen" styleClass="btn-secondary" text="Seleccionar Imagen" />
                                                <Label fx:id="lblRutaImagen" styleClass="label-info" text="Sin imagen seleccionada" />
                                            </children>
                                        </VBox>

                                        <!-- Información básica -->
                                        <VBox spacing="10.0">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Información Básica" />

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Nombre del Producto *" />
                                                        <TextField fx:id="txtNombre" promptText="Ingrese el nombre del producto" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Descripción Corta" />
                                                        <TextArea fx:id="txtDescripcionCorta" maxHeight="60.0" promptText="Descripción breve del producto" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Descripción Detallada" />
                                                        <TextArea fx:id="txtDescripcionLarga" maxHeight="80.0" promptText="Descripción detallada del producto" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- Precios y stock -->
                                        <VBox spacing="10.0">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Precios y Stock" />

                                                <HBox spacing="10.0">
                                                    <children>
                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Precio de Compra" />
                                                                <TextField fx:id="txtPrecioCompra" promptText="0.00" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Precio de Venta *" />
                                                                <TextField fx:id="txtPrecioVenta" promptText="0.00" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>

                                                <HBox spacing="10.0">
                                                    <children>
                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Stock Actual" />
                                                                <TextField fx:id="txtStock" promptText="0" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label text="Stock Mínimo" />
                                                                <TextField fx:id="txtStockMinimo" promptText="5" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <!-- Categorización -->
                                        <VBox spacing="10.0">
                                            <children>
                                                <Label styleClass="label-subtitle" text="Categorización" />

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Unidad de Medida" />
                                                        <ComboBox fx:id="cmbUnidadMedida" maxWidth="1.7976931348623157E308" promptText="Seleccionar unidad" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Categoría *" />
                                                        <ComboBox fx:id="cmbCategoria" maxWidth="1.7976931348623157E308" promptText="Seleccionar categoría" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Código de Barras" />
                                                        <TextField fx:id="txtCodigoBarras" promptText="Código único del producto" />
                                                    </children>
                                                </VBox>

                                                <CheckBox fx:id="chkEstado" mnemonicParsing="false" selected="true" text="Producto activo" />
                                            </children>
                                        </VBox>

                                        <!-- Botones de acción -->
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER" spacing="10.0">
                                                    <children>
                                                        <Button fx:id="btnGuardar" onAction="#handleGuardar" styleClass="btn-success" text="Guardar" />
                                                        <Button fx:id="btnModificar" onAction="#handleModificar" styleClass="btn-primary" text="Modificar" />
                                                        <Button fx:id="btnCancelar" onAction="#handleCancelar" styleClass="btn-secondary" text="Cancelar" />
                                                    </children>
                                                </HBox>

                                                <HBox alignment="CENTER" spacing="10.0">
                                                    <children>
                                                        <Button fx:id="btnDuplicar" onAction="#handleDuplicar" styleClass="btn-warning" text="Duplicar" />
                                                        <Button fx:id="btnEliminar" onAction="#handleEliminar" styleClass="btn-danger" text="Eliminar" />
                                                    </children>
                                                </HBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets top="20.0" />
                                            </VBox.margin>
                                        </VBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>