<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.GestionarProductosController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Productos" />
         </children>
      </HBox>

      <!-- Barra de herramientas -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Button fx:id="btnNuevo" onAction="#nuevoProducto" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Nuevo Producto" />
            <Button fx:id="btnEditar" disable="true" onAction="#editarProducto" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Editar" />
            <Button fx:id="btnEliminar" disable="true" onAction="#eliminarProducto" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Eliminar" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="btnActualizar" onAction="#actualizarLista" text="Actualizar" />
            <Separator orientation="VERTICAL" />
            <Label text="Buscar: " />
            <TextField fx:id="txtBuscar" prefWidth="200.0" promptText="Nombre, código o marca..." />
            <ComboBox fx:id="cmbCategoria" prefWidth="150.0" promptText="Todas las categorías" />
            <ComboBox fx:id="cmbEstado" prefWidth="120.0" promptText="Todos" />
         </items>
      </ToolBar>

      <!-- Contenido principal -->
      <SplitPane dividerPositions="0.75" VBox.vgrow="ALWAYS">
         <items>
            <!-- Lista de productos -->
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold; -fx-padding: 10;" text="Lista de Productos" />
                  <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
                        <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
                        <TableColumn fx:id="colMarca" prefWidth="100.0" text="Marca" />
                        <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio" />
                        <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
                        <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>

            <!-- Panel de detalles -->
            <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Detalles del Producto" />
                  <Separator />

                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="panelDetalles" spacing="10.0">
                           <children>
                              <!-- Imagen del producto -->
                              <VBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold;" text="Imagen" />
                                    <ImageView fx:id="imgProducto" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: white; -fx-border-color: #dee2e6;" />
                                 </children>
                              </VBox>

                              <!-- Información básica -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold;" text="Información Básica" />
                                    <Label fx:id="lblCodigo" text="Código: -" />
                                    <Label fx:id="lblNombre" text="Nombre: -" />
                                    <Label fx:id="lblDescripcion" text="Descripción: -" wrapText="true" />
                                    <Label fx:id="lblCategoria" text="Categoría: -" />
                                    <Label fx:id="lblMarca" text="Marca: -" />
                                 </children>
                              </VBox>

                              <!-- Precios e inventario -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold;" text="Precios e Inventario" />
                                    <Label fx:id="lblPrecioCompra" text="Precio Compra: -" />
                                    <Label fx:id="lblPrecioVenta" text="Precio Venta: -" />
                                    <Label fx:id="lblStock" text="Stock: -" />
                                    <Label fx:id="lblStockMinimo" text="Stock Mínimo: -" />
                                    <Label fx:id="lblUnidadMedida" text="Unidad: -" />
                                 </children>
                              </VBox>

                              <!-- Estado y fechas -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold;" text="Estado y Fechas" />
                                    <Label fx:id="lblEstado" text="Estado: -" />
                                    <Label fx:id="lblFechaCreacion" text="Creado: -" />
                                    <Label fx:id="lblFechaModificacion" text="Modificado: -" />
                                 </children>
                              </VBox>

                              <!-- Acciones rápidas -->
                              <VBox spacing="10.0">
                                 <children>
                                    <Label style="-fx-font-weight: bold;" text="Acciones Rápidas" />
                                    <Button fx:id="btnAjustarStock" onAction="#ajustarStock" prefWidth="150.0" text="Ajustar Stock" />
                                    <Button fx:id="btnCambiarPrecios" onAction="#cambiarPrecios" prefWidth="150.0" text="Cambiar Precios" />
                                    <Button fx:id="btnDuplicar" onAction="#duplicarProducto" prefWidth="150.0" text="Duplicar Producto" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </items>
      </SplitPane>

      <!-- Barra de estado -->
      <ToolBar style="-fx-background-color: #e9ecef;">
         <items>
            <Label fx:id="lblTotalProductos" text="Total productos: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblProductosActivos" text="Activos: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblBajoStock" text="Bajo stock: 0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblEstadoCarga" text="Listo" />
         </items>
      </ToolBar>
   </children>
</VBox>
