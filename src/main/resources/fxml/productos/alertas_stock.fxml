<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.AlertasStockController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Alertas de Stock" />
         </children>
      </HBox>

      <!-- Filtros -->
      <ToolBar style="-fx-background-color: white;">
         <items>
            <Label text="Categoría:" />
            <ComboBox fx:id="cmbCategoria" prefWidth="150.0" />
            <Label text="Nivel de alerta:" />
            <ComboBox fx:id="cmbNivelAlerta" prefWidth="120.0" />
            <Button fx:id="btnActualizar" onAction="#actualizarAlertas" text="Actualizar" />
         </items>
      </ToolBar>

      <!-- Tabla de productos con bajo stock -->
      <TableView fx:id="tablaAlertas" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Producto" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colStockActual" prefWidth="100.0" text="Stock Actual" />
            <TableColumn fx:id="colStockMinimo" prefWidth="100.0" text="Stock Mínimo" />
            <TableColumn fx:id="colNivelAlerta" prefWidth="100.0" text="Nivel" />
            <TableColumn fx:id="colAcciones" prefWidth="120.0" text="Acciones" />
         </columns>
      </TableView>

      <!-- Barra de estado -->
      <ToolBar style="-fx-background-color: #e9ecef;">
         <items>
            <Label fx:id="lblTotalAlertas" text="Productos en alerta: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblCriticos" text="Críticos: 0" />
            <Separator orientation="VERTICAL" />
            <Label fx:id="lblBajos" text="Bajos: 0" />
         </items>
      </ToolBar>
   </children>
</VBox>
