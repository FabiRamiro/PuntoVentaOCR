<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.InventarioFisicoController" prefWidth="1000.0" prefHeight="700.0">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15;" prefHeight="60.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Inventario Físico" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNuevoConteo" onAction="#nuevoConteo" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Nuevo Conteo" />
            <Button fx:id="btnActualizar" onAction="#actualizarLista" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Actualizar" />
         </children>
      </HBox>

      <!-- Panel de filtros -->
      <HBox spacing="10.0" style="-fx-padding: 15;" alignment="CENTER_LEFT">
         <children>
            <Label text="Filtros:" style="-fx-font-weight: bold;" />
            <ComboBox fx:id="cmbCategoria" promptText="Categoría" prefWidth="150.0" />
            <TextField fx:id="txtBuscar" promptText="Buscar producto..." prefWidth="200.0" />
            <Button fx:id="btnFiltrar" onAction="#aplicarFiltros" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Filtrar" />
            <Button fx:id="btnLimpiarFiltros" onAction="#limpiarFiltros" text="Limpiar" />
         </children>
      </HBox>

      <!-- Tabla de productos -->
      <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
            <TableColumn fx:id="colNombre" prefWidth="250.0" text="Producto" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colStockSistema" prefWidth="100.0" text="Stock Sistema" />
            <TableColumn fx:id="colStockFisico" prefWidth="120.0" text="Conteo Físico" />
            <TableColumn fx:id="colDiferencia" prefWidth="100.0" text="Diferencia" />
            <TableColumn fx:id="colObservaciones" prefWidth="200.0" text="Observaciones" />
            <TableColumn fx:id="colAcciones" prefWidth="100.0" text="Acciones" />
         </columns>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </TableView>

      <!-- Panel de resumen -->
      <HBox spacing="20.0" style="-fx-background-color: #e9ecef; -fx-padding: 15;" alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Total Productos" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblTotalProductos" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Productos Contados" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblProductosContados" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: green;" />
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Con Diferencias" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblConDiferencias" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: red;" />
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Progreso" style="-fx-font-weight: bold;" />
                  <ProgressBar fx:id="progressConteo" prefWidth="150.0" progress="0.0" />
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- Panel de acciones -->
      <HBox spacing="10.0" style="-fx-padding: 15;" alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnExportarCSV" onAction="#exportarCSV" text="Exportar CSV" />
            <Button fx:id="btnGuardarConteo" onAction="#guardarConteo" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Guardar Conteo" />
            <Button fx:id="btnAplicarAjustes" onAction="#aplicarAjustes" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Aplicar Ajustes" />
         </children>
      </HBox>
   </children>
</VBox>
