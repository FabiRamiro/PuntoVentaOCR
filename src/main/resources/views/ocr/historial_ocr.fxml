<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.HistorialOCRController">
   <children>
      <Label styleClass="h1" text="Historial OCR" />
      
      <!-- Filtros -->
      <TitledPane expanded="true" text="Filtros de Búsqueda">
         <content>
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <DatePicker fx:id="dateFechaInicio" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  
                  <Label text="Fecha Fin:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <DatePicker fx:id="dateFechaFin" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Estado:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cmbEstado" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  
                  <Label text="Banco:" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cmbBanco" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </content>
      </TitledPane>
      
      <!-- Búsqueda por referencia -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Buscar por Referencia:" />
            <TextField fx:id="txtBuscarReferencia" prefWidth="200.0" promptText="Ingrese referencia..." />
            <Button fx:id="btnBuscar" onAction="#handleBuscar" text="Buscar" />
            <Button fx:id="btnLimpiar" onAction="#handleLimpiar" text="Limpiar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <!-- Estadísticas -->
      <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="lblTotalComprobantes" styleClass="h2" text="0" />
                  <Label text="Total" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="lblTotalValidados" styleClass="h2" text="0" />
                  <Label text="Validados" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="lblTotalRechazados" styleClass="h2" text="0" />
                  <Label text="Rechazados" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label fx:id="lblTotalPendientes" styleClass="h2" text="0" />
                  <Label text="Pendientes" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Tabla de comprobantes -->
      <TableView fx:id="tableComprobantes" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
            <TableColumn fx:id="colBanco" prefWidth="100.0" text="Banco" />
            <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
            <TableColumn fx:id="colReferencia" prefWidth="150.0" text="Referencia" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colObservaciones" prefWidth="200.0" text="Observaciones" />
         </columns>
      </TableView>
      
      <!-- Botones de acción -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="btnVerDetalle" disable="true" onAction="#handleVerDetalle" text="Ver Detalle" />
            <Button fx:id="btnExportarPDF" onAction="#handleExportarPDF" text="Exportar PDF" />
            <Button fx:id="btnEliminar" disable="true" onAction="#handleEliminar" styleClass="btn-danger" text="Eliminar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>