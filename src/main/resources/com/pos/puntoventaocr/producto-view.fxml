<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.puntoventaocr.controllers.ProductoController">
   <top>
      <VBox spacing="10">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Productos" />
            <HBox spacing="10">
               <children>
                  <TextField fx:id="txtBuscar" promptText="Buscar por nombre o código..." prefWidth="200" />
                  <ComboBox fx:id="cmbFiltroCategoria" promptText="Categoría" prefWidth="150" />
                  <ComboBox fx:id="cmbFiltroEstado" promptText="Estado" prefWidth="120" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox>
         <children>
            <VBox prefWidth="500">
               <children>
                  <TableView fx:id="tableProductos" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colCodigo" text="Código" prefWidth="100" />
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
                        <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="100" />
                        <TableColumn fx:id="colPrecioCompra" text="P. Compra" prefWidth="80" />
                        <TableColumn fx:id="colPrecioVenta" text="P. Venta" prefWidth="80" />
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="60" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="70" />
                        <TableColumn fx:id="colFechaCreacion" text="Fecha" prefWidth="80" />
                     </columns>
                  </TableView>
               </children>
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" right="10.0" top="5.0" />
               </HBox.margin>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox prefWidth="300" styleClass="product-detail-panel">
               <children>
                  <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Detalles del Producto" />
                  <Separator />
                  
                  <GridPane hgap="10" vgap="8">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="80" />
                        <ColumnConstraints hgrow="ALWAYS" />
                     </columnConstraints>
                     <children>
                        <Label styleClass="detail-label" text="Código:" GridPane.rowIndex="0" />
                        <Label fx:id="lblDetalleCodigo" styleClass="detail-value" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label styleClass="detail-label" text="Nombre:" GridPane.rowIndex="1" />
                        <Label fx:id="lblDetalleNombre" styleClass="detail-value" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label styleClass="detail-label" text="Descripción:" GridPane.rowIndex="2" />
                        <Label fx:id="lblDetalleDescripcion" styleClass="detail-value" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" wrapText="true" />
                        
                        <Label styleClass="detail-label" text="P. Compra:" GridPane.rowIndex="3" />
                        <Label fx:id="lblDetallePrecioCompra" styleClass="detail-value" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label styleClass="detail-label" text="P. Venta:" GridPane.rowIndex="4" />
                        <Label fx:id="lblDetallePrecioVenta" styleClass="detail-value price" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label styleClass="detail-label" text="Stock:" GridPane.rowIndex="5" />
                        <Label fx:id="lblDetalleStock" styleClass="detail-value stock" text="-" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Label styleClass="detail-label" text="Ganancia:" GridPane.rowIndex="6" />
                        <Label fx:id="lblDetalleGanancia" styleClass="detail-value profit" text="-" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                     </children>
                  </GridPane>
                  
                  <Separator />
                  
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Imagen del Producto" />
                  <VBox fx:id="panelImagen" alignment="CENTER" prefHeight="220" styleClass="image-preview">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </VBox>
                  
               </children>
               <HBox.margin>
                  <Insets bottom="15.0" left="10.0" right="15.0" top="5.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>